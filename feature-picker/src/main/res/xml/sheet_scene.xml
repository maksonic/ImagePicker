<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="100">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="0"
                motion:motionTarget="@+id/appBarLayout" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="99"
                motion:motionTarget="@+id/appBarLayout" />
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/appBarLayout" />
<!--
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="0"
                motion:motionTarget="@+id/switchFilesCategoryPanel" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="100"
                motion:motionTarget="@+id/switchFilesCategoryPanel" />-->
        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/sheetIndicator"
            android:layout_width="36dp"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/padding_8dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/appBarLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/recyclerGallery" />
        <Constraint
            android:id="@+id/recyclerGallery"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/padding_8dp"
            motion:layout_constraintBottom_toTopOf="@id/switchFilesCategoryPanel"
            motion:layout_constraintTop_toBottomOf="@id/sheetIndicator" />

        <Constraint
            android:id="@+id/filesPanelContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/sheetIndicator"
            android:layout_width="36dp"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/padding_8dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/recyclerGallery"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/appBarLayout" />
        <Constraint
            android:id="@+id/filesPanelContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </ConstraintSet>

</MotionScene>